<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping >
	<class name="entity.district" table="DISTRICT" lazy="false">
		<id name="id" type="java.lang.Short" column="ID">
			<generator class="sequence">
				<param name="sequence">seq2</param>
			</generator>
		</id>
		<property name="name" type="java.lang.String" column="NAME"></property>
		
		
		<set name="streets" cascade="save-update,delete" inverse="true" lazy="false">
            <key>
                <column name="DISTRICT_ID"/>
            </key>
            <one-to-many class="entity.street" />
        </set>
        
	</class>
</hibernate-mapping>
